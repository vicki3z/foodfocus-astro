---
import Container from "./Container.astro";
import { getBaseUrl } from "../../lib/utils";

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Events",
    links: [
      { label: "Latest Events", href: "/events" },
      { label: "Roadmap", href: `/roadmap/${currentYear}` },
      { label: "Roadshow", href: `/roadshow/${currentYear}` },
      { label: "Proseries", href: `/proseries/${currentYear}` },
      { label: "Exclusive Events", href: `/exclusive-events/${currentYear}` },
      { label: "Exhibitions", href: "/exhibitions" },
    ],
  },
  {
    title: "Articles",
    links: [
      { label: "What's In", href: "/whats-in" },
      { label: "News", href: "/news" },
      { label: "U Share. V Care.", href: "/ushare" },
    ]
  },
  {
    title: "Magazines",
    links: [
      { label: "Food Focus Thailand", href: "/magazines" },
      { label: "Special Supplements", href: "/magazines" },
      { label: "Subscribe", href: "https://goo.gl/forms/oP25aDCXWbNASbXh2", externalLink: true },
    ],
  },
];

const socialLinks = [
  {
    label: "Facebook",
    href: "https://www.facebook.com/foodfocusthailand/",
    icon: "facebook",
  },
  {
    label: "Line",
    href: "http://line.me/ti/p/@foodfocusthailand",
    icon: "line",
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/company/foodfocusthailand",
    icon: "linkedin",
  },
  {
    label: "Instagram",
    href: "https://www.instagram.com/foodfocus_thailand",
    icon: "instagram",
  },
  {
    label: "YouTube",
    href: "https://www.youtube.com/@foodfocusthailand4742",
    icon: "youtube",
  },
];

const baseUrl = getBaseUrl();
---

<footer class="bg-cover text-white" style={`background-image: url(${baseUrl}images/header-bg.jpg)`}>
  <Container>
    <div class="pt-12 pb-6">
      <div class="flex flex-col gap-12 md:flex-row md:justify-between">
        <!-- Logo and Description -->
        <div class="flex flex-col justify-between">
          <div class="flex flex-col gap-4">
            <p class="text-md text-white/80 font-semibold">
              Enjoy reading through e-book applications:
            </p>

            <div class="flex gap-2">
              <a
                href="https://www.mebmarket.com/index.php?action=Publisher&amp;publisher_id=393870&amp;id=393870&amp;name=Be%20Media%20Focus%20(Thailand)%20Co.,%20Ltd."
                title=""
                target="_blank"
                rel="noopener noreferrer"
              >
                <img
                  src="https://www.foodfocusthailand.com/images/upload/p-3.png"
                  alt=""
                  width="64"
                />
              </a>
              <a
                href="https://www.theonebook.com/index.php?action=Publisher&amp;id=393870&amp;name=Be%20Media%20Focus%20(Thailand)%20Co.,%20Ltd."
                title=""
                target="_blank"
                rel="noopener noreferrer"
              >
                <img
                  src="https://www.foodfocusthailand.com/images/upload/p-5.png"
                  alt=""
                  width="64"
                />
              </a>
            </div>
          </div>
        </div>

        <!-- Footer Link Columns -->
        <div class="flex flex-col gap-8 md:flex-row md:gap-16">
          {
            footerLinks.map((column) => (
              <div>
                <h3 class="font-semibold mb-4">{column.title}</h3>
                <ul class="space-y-2">
                  {column.links.map((link) => (
                    <li>
                      <a
                        href={link.externalLink ? link.href : `${baseUrl}${link.href.slice(1)}`}
                        class="text-sm text-white/80 hover:text-white transition-colors"
                        target={link.externalLink ? "_blank" : "_self"}
                        rel={link.externalLink ? "noopener noreferrer" : ""}
                      >
                        {link.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>

      </div>
      <div class="flex flex-col gap-12 md:flex-row md:justify-between mt-12 items-center">
        <div class="text-xs text-white/80">
          <p>
            Be Media Focus (Thailand) Co., Ltd.
          </p>
          <p>
            5/38 Soi Ngamwongwan 25 Yak 26, Bangkhen
          </p>
          <p>
            Muang Nonthaburi, Nonthaburi 11000 Thailand
          </p>
        </div>
        <!-- Social Links -->
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={social.label}
                class="text-white/80 hover:text-white transition-colors"
              >
                {social.icon === "facebook" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                )}
                {social.icon === "line" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63h2.386c.346 0 .627.285.627.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63.346 0 .628.285.628.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.348 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.282.629-.629.629M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.078 9.436-6.975C23.176 14.393 24 12.458 24 10.314" />
                  </svg>
                )}
                {social.icon === "linkedin" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                  </svg>
                )}
                {social.icon === "instagram" && (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
                )}
                {social.icon === "youtube" && (
                  <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/20 py-6">
      <div class="flex flex-col gap-3 sm:flex-row sm:justify-between sm:items-center text-center sm:text-left">
        <p class="text-sm text-white/60">
          &copy; {currentYear} Food Focus Thailand. All rights reserved.
        </p>
        <div class="flex gap-4 text-xs justify-center sm:justify-start">
          <a href="#">Sitemap</a>
          <a href={`${baseUrl}contact-us`}>Contact Us</a>
          <a href="https://goo.gl/forms/oP25aDCXWbNASbXh2" target="_blank" rel="noopener noreferrer">Subscribe</a>
        </div>
      </div>

    </div>
  </Container>
</footer>
