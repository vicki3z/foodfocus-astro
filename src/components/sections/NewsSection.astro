---
import Container from '../layout/Container.astro';
import ConfigurableSection from './ConfigurableSection.astro';
import ArticleCard from "../ui/ArticleCard.astro";
import { getBaseUrl } from "../../lib/utils";

interface Article {
  title: string;
  excerpt?: string;
  date?: string;
  slug: string;
  image: string;
  imageAlt?: string;
  category?: string;
  type?: string
}

interface ConfigSection {
  type: string;
  label: string;
  items: Article[];
}

interface Props {
  articles: Article[];
  ushareArticles?: Article[];
  configurationItems?: Article[];
  title?: string;
  seeAllHref?: string;
}

const { articles, ushareArticles = [], configurationItems = [], title = 'News', seeAllHref = '/news' } = Astro.props;
const baseUrl = getBaseUrl();
---

<section class="py-12 bg-[var(--color-bg-light)]">
  <Container>
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Left Column: News Articles (2/3 width) -->
      <div class="lg:col-span-2">
        <!-- News Section -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-[#2d3319]">
              {title}
            </h2>
            <a
              href={`${baseUrl}${seeAllHref.slice(1)}`}
              class="text-sm font-medium text-[#3a5f47] hover:underline flex items-center gap-1"
            >
              See all
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- News Articles - Horizontal Cards -->
          <div class="space-y-6">
            {articles.slice(0, 6).map((article) => (
              <ArticleCard
                image={article.image}
                imageAlt={article.imageAlt}
                category={article.category || "What's In"}
                excerpt={article.excerpt}
                title={article.title}
                date={article.date}
                href={`news/${article.slug}`}
                variant="horizontal"
              />
            ))}
          </div>
        </div>

        <!-- Ushare Section -->
        <div>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-[#2d3319]">
              U Share. V Care.
            </h2>
            <a
              href={`${baseUrl}ushare`}
              class="text-sm font-medium text-[#3a5f47] hover:underline flex items-center gap-1"
            >
              See all
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          <!-- Ushare Articles - Horizontal Cards -->
          <div class="space-y-6">
            {ushareArticles.slice(0, 6).map((article) => (
              <ArticleCard
                image={article.image}
                imageAlt={article.imageAlt}
                category={article.category || "What's In"}
                excerpt={article.excerpt}
                title={article.title}
                date={article.date}
                href={`ushare/${article.slug}`}
                variant="horizontal"
              />
            ))}
          </div>
        </div>
      </div>

      <!-- Right Column: Configurable Sections (1/3 width) -->
      <div class="lg:col-span-1 h-full flex flex-col pt-14">
        <div class="flex flex-col justify-between gap-6 flex-1">
          {configurationItems.map((article) => (
            <ArticleCard
              image={article.image}
              imageAlt={article.imageAlt}
              category={article.category || "What's In"}
              title={article.title}
              date={article.date}
              href={article.slug}
              excerpt={article.excerpt}
              variant="vertical"
            />
          ))}
        </div>
      </div>
    </div>
  </Container>
</section>
