---
import Container from '../layout/Container.astro';
import ConfigurableSection from './ConfigurableSection.astro';
import ArticleCard from "../ui/ArticleCard.astro";
import { getBaseUrl } from "../../lib/utils";

interface Article {
  title: string;
  excerpt?: string;
  date?: string;
  slug: string;
  image: string;
  imageAlt?: string;
  category?: string;
}

interface ConfigSection {
  type: string;
  label: string;
  href: string;
  items: any[];
}

interface Props {
  articles: Article[];
  configurableSections?: ConfigSection[];
  title?: string;
  seeAllHref?: string;
}

const { articles, configurableSections = [], title = 'News', seeAllHref = '/news' } = Astro.props;
const baseUrl = getBaseUrl();
---

<section class="py-12 bg-[var(--color-bg-light)]">
  <Container>
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Left Column: News Articles (2/3 width) -->
      <div class="lg:col-span-2">
        <!-- Section Header -->
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-[#2d3319]">
            {title}
          </h2>
          <a
            href={`${baseUrl}${seeAllHref.slice(1)}`}
            class="text-sm font-medium text-[#3a5f47] hover:underline flex items-center gap-1"
          >
            See all
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- News Articles - Horizontal Cards -->
        <div class="space-y-6">
          {articles.slice(0, 6).map((article) => (
            <ArticleCard
              image={article.image}
              imageAlt={article.imageAlt}
              category={article.category || "What's In"}
              excerpt={article.excerpt}
              title={article.title}
              date={article.date}
              href={`${baseUrl}news/${article.slug}`}
              variant="horizontal"
            />
          ))}
        </div>
      </div>

      <!-- Right Column: Configurable Sections (1/3 width) -->
      <div class="lg:col-span-1">
        {configurableSections.map((section) => (
          section.items.length > 0 && (
            <div class="mb-8 last:mb-0">
              <!-- Items - Stacked Vertically -->
              <div class="space-y-4">
                {section.items.slice(0, 3).map((article: any) => (
                  <ArticleCard
                    image={article.image}
                    imageAlt={article.imageAlt}
                    category={article.category || "What's In"}
                    title={article.title}
                    date={article.date}
                    href={`${baseUrl}${section.type}/${article.slug}`}
                    variant="vertical"
                  />
                ))}
              </div>
            </div>
          )
        ))}
      </div>
    </div>
  </Container>
</section>
