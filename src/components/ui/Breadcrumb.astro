---
import { getBaseUrl } from "../../lib/utils";

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  class?: string;
}

const { items, class: className = "" } = Astro.props;
const baseUrl = getBaseUrl();

// Helper to prepend baseUrl to internal paths
const withBase = (path: string) => {
  if (!path || path.startsWith("http")) return path;
  if (path === "/") return baseUrl;
  return `${baseUrl}${path}`;
};
---

<nav aria-label="Breadcrumb" class:list={["text-sm", className]}>
  <ol class="flex lg:items-center gap-1 flex-col lg:flex-row">
    <li class="flex items-center">
      <a
        href={`${baseUrl}home`}
        class="text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors flex items-center"
        aria-label="Home"
      >
        Home
      </a>
    </li>
    {
      items.map((item, index) => (
        <li class="flex items-center">
          <span class="mx-2 text-[var(--color-text-muted)]">/</span>
          {item.href && index < items.length - 1 ? (
            <a
              href={withBase(item.href)}
              class="text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors"
            >
              {item.label}
            </a>
          ) : (
            <span
              class="text-[var(--color-text-dark)] font-medium"
              aria-current={index === items.length - 1 ? "page" : undefined}
            >
              {item.label}
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>
