---
import { getBaseUrl, getPlaceHolderImageSrc } from "../../lib/utils";
import { Tag } from "./Tag.tsx";

interface Props {
  image: string;
  imageAlt?: string;
  category?: string;
  categorySlug?: string;
  title: string;
  excerpt?: string;
  date?: string;
  dateStart?: string;
  dateEnd?: string;
  location?: string;
  tel?: string;
  email?: string;
  website?: string;
  href?: string;
  variant?: "vertical" | "horizontal";
  class?: string;
}

const {
  image,
  imageAlt = "",
  category,
  categorySlug,
  title,
  excerpt,
  date,
  dateStart,
  dateEnd,
  location,
  tel,
  email,
  website,
  href,
  variant = "vertical",
  class: className = "",
} = Astro.props;
const baseUrl = getBaseUrl();

const formattedDate = date
  ? new Date(date).toLocaleDateString("en-GB", {
      year: "numeric",
      month: "long",
      day: "numeric",
      timeZone: "Asia/Bangkok",
    })
  : null;

// Format date range
const dateRangeText = (() => {
  if (!dateStart || !dateEnd) return null;
  
  const start = new Date(dateStart);
  const end = new Date(dateEnd);
  
  const startDay = start.getDate();
  const endDay = end.getDate();
  const startMonth = start.toLocaleDateString("en-GB", { month: "long", timeZone: "Asia/Bangkok" });
  const endMonth = end.toLocaleDateString("en-GB", { month: "long", timeZone: "Asia/Bangkok" });
  const startYear = start.getFullYear();
  const endYear = end.getFullYear();
  
  // Same month and year
  if (start.getMonth() === end.getMonth() && startYear === endYear) {
    return `${startDay}-${endDay} ${startMonth} ${startYear}`;
  }
  
  // Different months but same year
  if (startYear === endYear) {
    return `${startDay} ${startMonth} - ${endDay} ${endMonth} ${startYear}`;
  }
  
  // Different years
  return `${startDay} ${startMonth} ${startYear} - ${endDay} ${endMonth} ${endYear}`;
})();

const cleanExcerpt = excerpt
  ? excerpt.replace(/<[^>]*>/g, "").replace(/&nbsp;/g, " ")
  : undefined;

const Comp = href ? "a" : "div";
const articleImageSrc = image || getPlaceHolderImageSrc();
const linkUrl = href ? `${baseUrl}${href}` : undefined;
---

{
  variant === "vertical" ? (
    <Comp
      href={linkUrl}
      class:list={[
        "group block bg-white rounded-lg overflow-hidden p-4",
        className,
      ]}
    >
      <div class="aspect-[16/10] overflow-hidden">
        <img
          src={articleImageSrc}
          alt={imageAlt || title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 rounded-md"
          loading="lazy"
        />
      </div>
      <div class="py-4">
        {category && (
          <Tag variant="primary" size="sm" className="mb-3">
            {category}
          </Tag>
        )}
        <h3 class="font-semibold text-lg text-[var(--color-text-dark)] line-clamp-2 mb-3 group-hover:text-[var(--color-primary)] transition-colors">
          {title}
        </h3>
        
        {/* Location */}
        {location && (
          <div class="flex items-start gap-2 mb-2 text-sm text-[var(--color-text-dark)]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-5 h-5 flex-shrink-0 mt-0.5"
            >
              <path
                fill-rule="evenodd"
                d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="font-medium">{location}</span>
          </div>
        )}
        
        {/* Date Range */}
        {dateRangeText && (
          <div class="flex items-start gap-2 mb-2 text-sm text-[var(--color-text-dark)]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-5 h-5 flex-shrink-0 mt-0.5"
            >
              <path
                fill-rule="evenodd"
                d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="font-medium">{dateRangeText}</span>
          </div>
        )}
        
        {/* Website */}
        {website && (
          <div class="flex items-start gap-2 mb-2 text-sm text-[var(--color-text-dark)]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-5 h-5 flex-shrink-0 mt-0.5"
            >
              <path
                fill-rule="evenodd"
                d="M19.902 4.098a3.75 3.75 0 0 0-5.304 0l-4.5 4.5a3.75 3.75 0 0 0 1.035 6.037.75.75 0 0 1-.646 1.353 5.25 5.25 0 0 1-1.449-8.45l4.5-4.5a5.25 5.25 0 1 1 7.424 7.424l-1.757 1.757a.75.75 0 1 1-1.06-1.06l1.757-1.757a3.75 3.75 0 0 0 0-5.304Zm-7.389 4.267a.75.75 0 0 1 1-.353 5.25 5.25 0 0 1 1.449 8.45l-4.5 4.5a5.25 5.25 0 1 1-7.424-7.424l1.757-1.757a.75.75 0 1 1 1.06 1.06l-1.757 1.757a3.75 3.75 0 1 0 5.304 5.304l4.5-4.5a3.75 3.75 0 0 0-1.035-6.037.75.75 0 0 1-.354-1Z"
                clip-rule="evenodd"
              />
            </svg>
            <a
              href={website}
              target="_blank"
              rel="noopener noreferrer"
              class="font-medium text-[var(--color-primary)] hover:underline"
            >
              {website}
            </a>
          </div>
        )}
        
        {/* Tel */}
        {tel && (
          <div class="flex items-start gap-2 mb-2 text-sm text-[var(--color-text-dark)]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-5 h-5 flex-shrink-0 mt-0.5"
            >
              <path
                fill-rule="evenodd"
                d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="font-medium">{tel}</span>
          </div>
        )}
        
        {/* Email */}
        {email && (
          <div class="flex items-start gap-2 mb-2 text-sm text-[var(--color-text-dark)]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-5 h-5 flex-shrink-0 mt-0.5"
            >
              <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
              <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
            </svg>
            <a
              href={`mailto:${email}`}
              class="font-medium text-[var(--color-primary)] hover:underline"
            >
              {email}
            </a>
          </div>
        )}
        
        {cleanExcerpt && (
          <p class="text-sm text-[var(--color-text-muted)] line-clamp-3 mb-2 tracking-wide">
            {cleanExcerpt}
          </p>
        )}
        {formattedDate && !dateRangeText && (
          <time class="text-xs text-[var(--color-text-muted)]" datetime={date}>
            {formattedDate}
          </time>
        )}
      </div>
    </Comp>
  ) : (
    <Comp
      href={linkUrl}
      class:list={[
        "group flex gap-4 bg-white rounded-lg overflow-hidden p-4",
        className,
      ]}
    >
      <div class="flex-shrink-0 w-52 overflow-hidden rounded-lg">
        <img
          src={articleImageSrc}
          alt={imageAlt || title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 rounded-md"
          loading="lazy"
        />
      </div>
      <div class="flex flex-col flex-1 p-2 gap-3">
        <div class="flex justify-between items-center">
          {category && (
            <Tag variant="primary" size="sm">
              {category}
            </Tag>
          )}
          {formattedDate && !dateRangeText && (
            <time
              class="flex items-center gap-1.5 text-xs font-medium text-[var(--color-text-muted)]"
              datetime={date}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="size-4"
              >
                <path
                  fill-rule="evenodd"
                  d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z"
                  clip-rule="evenodd"
                />
              </svg>

              {formattedDate}
            </time>
          )}
        </div>

        <div class="flex flex-col gap-1">
          <h3 class="font-semibold text-sm text-[var(--color-text-dark)] line-clamp-2 group-hover:text-[var(--color-primary)] transition-colors">
            {title}
          </h3>
          
          {/* Location */}
          {location && (
            <div class="flex items-center gap-1.5 text-xs text-[var(--color-text-dark)]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-4 h-4 flex-shrink-0"
              >
                <path
                  fill-rule="evenodd"
                  d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"
                  clip-rule="evenodd"
                />
              </svg>
              <span>{location}</span>
            </div>
          )}
          
          {/* Date Range */}
          {dateRangeText && (
            <div class="flex items-center gap-1.5 text-xs text-[var(--color-text-dark)]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-4 h-4 flex-shrink-0"
              >
                <path
                  fill-rule="evenodd"
                  d="M6.75 2.25A.75.75 0 0 1 7.5 3v1.5h9V3A.75.75 0 0 1 18 3v1.5h.75a3 3 0 0 1 3 3v11.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V7.5a3 3 0 0 1 3-3H6V3a.75.75 0 0 1 .75-.75Zm13.5 9a1.5 1.5 0 0 0-1.5-1.5H5.25a1.5 1.5 0 0 0-1.5 1.5v7.5a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5v-7.5Z"
                  clip-rule="evenodd"
                />
              </svg>
              <span>{dateRangeText}</span>
            </div>
          )}
          
          {cleanExcerpt && (
            <p class="text-sm text-[var(--color-text-muted)] line-clamp-3 mb-2 tracking-wide">
              {cleanExcerpt}
            </p>
          )}
        </div>
      </div>
    </Comp>
  )
}
