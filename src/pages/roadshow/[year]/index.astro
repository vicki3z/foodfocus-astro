---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { Header } from "../../../components/layout/Header";
import Footer from "../../../components/layout/Footer.astro";
import Container from "../../../components/layout/Container.astro";
import Breadcrumb from "../../../components/ui/Breadcrumb.astro";
import ArticleGrid from "../../../components/sections/ArticleGrid.astro";
import { YearSelector } from "../../../components/ui/YearSelector";
import { fetchGraphQL } from "../../../lib/graphql";
import { GET_ROADSHOWS, GET_EVENT_YEARS, GET_PAGE_BY_SLUG } from "../../../lib/queries";

const pageTitle = "Roadshow";

// Fetch page content
const pageData = await fetchGraphQL<any>(GET_PAGE_BY_SLUG, {
  slug: "food-focus-thailand-roadshow",
}).catch(() => null);

const pageContent = pageData?.page?.content || "";

// Generate static paths for all available years
export async function getStaticPaths() {
  const yearsData = await fetchGraphQL<any>(GET_EVENT_YEARS).catch(() => null);
  const availableYears = (yearsData?.eventYears?.nodes || [])
    .map((node: any) => parseInt(node.name))
    .sort((a: number, b: number) => b - a);

  return availableYears.map((year: number) => ({
    params: { year: String(year) },
    props: { year, availableYears },
  }));
}

const { year, availableYears } = Astro.props;
const currentYear = year;

// Fetch CPT items for the selected year using taxonomy
const data = await fetchGraphQL<any>(GET_ROADSHOWS, {
  yearSlug: String(currentYear),
}).catch(() => null);

const articles = (data?.eventYear?.roadshows?.nodes || []).map((item: any) => ({
  title: item.title,
  excerpt: item.postSummary?.summary || "",
  slug: item.slug,
  image: item.featuredImage?.node?.sourceUrl,
  imageAlt: item.featuredImage?.node?.altText || "",
  category: pageTitle,
}));

const breadcrumbs = [{ label: pageTitle, href: `roadshow` }, { label: String(currentYear) }];
---

<BaseLayout title={`${pageTitle} ${currentYear}`} description={`Browse all ${pageTitle} events from ${currentYear}`}>
  <Header client:load slot="header" />

  <Container class="py-8">
    <!-- Breadcrumb -->
    <Breadcrumb items={breadcrumbs} class="mb-6" />

    <!-- Page Title -->
    <h1 class="text-3xl font-bold text-[var(--color-text-dark)] mb-4">
      {pageTitle} {currentYear}
    </h1>

    <!-- Page Content -->
    {
      pageContent && (
        <div class="mb-8 text-[var(--color-text-muted)]" set:html={pageContent} />
      )
    }

    <!-- Year Selector -->
    {
      availableYears.length > 0 && (
        <YearSelector
          years={availableYears.map(String)}
          defaultYear={String(currentYear)}
          baseHref="/roadshow"
          client:load
        />
      )
    }

    <!-- Articles Grid -->
    {
      articles.length > 0 ? (
        <ArticleGrid articles={articles} baseHref="roadshow" columns={3} />
      ) : (
        <p class="text-center text-[var(--color-text-muted)] py-12">
          No items found for {currentYear}.
        </p>
      )
    }
  </Container>

  <Footer slot="footer" />
</BaseLayout>
